<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE082">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Level"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginEnd="20dp"/>

        <!-- City World -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City World"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#2196F3"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/cityWorldLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="2dp">

                <Button
                    android:id="@+id/level1Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="1"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#2196F3"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/level2Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="2"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#2196F3"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/level3Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="3"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#2196F3"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Forest World -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forest World"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#4CAF50"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/forestWorldLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="2dp">

                <Button
                    android:id="@+id/level4Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="4"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#4CAF50"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/level5Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="5"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#4CAF50"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/level6Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="6"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#4CAF50"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Park World -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Park World"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#9C27B0"
                android:padding="12dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/parkWorldLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="2dp">

                <Button
                    android:id="@+id/level7Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="7"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#9C27B0"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/level8Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="8"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#9C27B0"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/level9Button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="9"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:background="#9C27B0"
                    android:layout_margin="8dp"
                    android:elevation="4dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</HorizontalScrollView> 